<%- include('./partials/head.ejs') %>
  <body>
    <div class="container">

      <%- include('./partials/search.ejs') %>
      <%- include('./partials/nav.ejs') %>
      <%- include('./partials/header.ejs') %>


      <h3 class="search-text">Search Results for : <span style="color: #000000E0;" id="searchedValue">'<%= search %>'</span></h3>

      <div class="recent-card" id="searchDisplay">
        <%if(data.length > 0){%>
          <%data.forEach((item)=>{%>
            <a class="card-container" href="/<%= item._id %>">
              <div class="card-image">
                <img src="<%= item.imageUrl %>">
              </div>
              <div class="card-body">
                <h4><%= item.title %></h4>
                <h5><%= item.createdAt.toDateString() %></h5>
              </div>
            </a>

          <%})%>

        <%}else{%>
          <h3 style="margin: auto;">Search result not found</h3>
        <%}%>
        
        

        

      </div>

      <%- include('./partials/footer.ejs') %> 

      
  
    </div>
    
  </body>
</html>